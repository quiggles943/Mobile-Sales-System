<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mss.mobilesalessystem"
    android:versionName="@string/appVersionTitle">

    <uses-sdk android:minSdkVersion="21"
        android:targetSdkVersion="22" />

    <meta-data android:name="com.google.android.gms.vision.DEPENDENCIES" android:value="barcode"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label = "@string/app_name">


        <activity
            android:name=".MainMenu"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
        </activity>
        <activity
            android:name=".qrScanner"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Transaction"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".ItemCheck"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Cart"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Checkout"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Statistics"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Refund"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".Settings"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
        </activity>
        <activity
            android:name=".DropboxClasses.DropboxLogin"
            android:label="Mobile Sales System"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Material.NoActionBar.Fullscreen" >
            <intent-filter>
                <action android:name="com.example.mss.mobilesalessystem.DropboxLogin"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>


        <activity android:name="com.dropbox.core.android.AuthActivity"
            android:configChanges="orientation|keyboard"
            android:launchMode="singleTask">

            <intent-filter>
                <data android:scheme="db-meuvjkjxl7djuwv" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.BROWSABLE" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

        </activity>


    </application>



</manifest>
